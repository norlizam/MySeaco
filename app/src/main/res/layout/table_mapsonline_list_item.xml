<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800000"
        android:scrollbars="vertical"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dip" >

            <TextView
                android:id="@+id/mapsoffline_seacobarcode"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dip" />

            <TextView
                android:id="@+id/mapsoffline_LatLon"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:background="#ffffff"
                android:padding="5dip" />

            <TextView
            android:id="@+id/mapsoffline_address"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="#ffffff"
            android:padding="5dip" />

            <TextView
                android:id="@+id/mapsoffline_address2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:background="#ffffff"
                android:padding="5dip" />

            <Button
                android:id="@+id/mapsoffline_detail"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:background="#ACA899"
                android:gravity="center"
                android:padding="5dip"
                android:text="@string/mapsoffline_detail"/>

        </TableRow>
    </TableLayout>

</LinearLayout>